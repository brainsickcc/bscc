ATTR ClassHeaderBlockParts [ symbolTableForVtbl: SymbolTable | | props USE {<>} {[]}: SNewProps ]
ATTR ClassHeaderBlockPart  [ symbolTableForVtbl: SymbolTable | | props: SNewProps ]
SEM ClassHeaderBlockPart
  | ClassHeaderChild
      lhs.props = []
      --child.symbolTableForVtbl = mempty -- FIXME. required? if so explain
  | ClassHeaderProp
      lhs.props = [SNewPropSimple @name @loc.ty @loc.vtblIdx @val.translated]
      loc.vtblEntry =
        case SymTable.lookup @name @lhs.symbolTableForVtbl of
          Just (Just idx, SymbolProp name ty) -> (idx, name, ty)
          _ -> (VtableIndex 99999, mkSymbolName "DUMMY", SVariant) -- error ("property not found in vtable: " ++ show @name ++ "\n" ++ show @lhs.symbolTableForVtbl)
      loc.ty = let (_, _, ty) = @loc.vtblEntry in ty
      loc.vtblIdx = let (idx, _, _) = @loc.vtblEntry in idx
      val.symbolTable = SymTable.empty -- this is read because of the expr.  this isn't a symbol (property) that we export.
  | ClassHeaderPropBlock
      lhs.props = [] -- FIXME

