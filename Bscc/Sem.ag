ATTR Modules [ | | mainProcs USE {<>} {Seq.empty}: {Seq.Seq SProcPrototype}]
ATTR Module [ | | mainProcs: {Seq.Seq SProcPrototype} ]
SEM Module
   | BasModule  lhs.mainProcs = case SymTable.lookup (mkSymbolName "Main")
